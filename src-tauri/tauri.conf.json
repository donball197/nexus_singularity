{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nexus_singularity",
  "version": "0.1.0",
  "identifier": "com.donball197.nexus-singularity",
  "build": {
    "frontendDist": "../static",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "windows": [
      {
        "title": "nexus_singularity",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
